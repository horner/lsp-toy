{
  "name": "lsp-toy",
  "displayName": "lsp-toy",
  "description": "LSP Toy Server",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lsptoy",
        "aliases": [
          "lsptoy",
          "lsptoy"
        ],
        "extensions": [
          "lsptoy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lsptoy",
        "scopeName": "source.lsptoy",
        "path": "./syntaxes/lsptoy.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "heading",
        "description": "Markdown-style headings",
        "superType": "keyword"
      },
      {
        "id": "bold",
        "description": "Bold text spans",
        "superType": "strong"
      },
      {
        "id": "italic",
        "description": "Italic text spans",
        "superType": "emphasis"
      },
      {
        "id": "link",
        "description": "Markdown links",
        "superType": "string"
      },
      {
        "id": "code",
        "description": "Inline code spans",
        "superType": "variable"
      },
      {
        "id": "todo",
        "description": "TODO annotations",
        "superType": "comment"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.5.4"
  }
}
