{
  "name": "lsp-toy",
  "displayName": "lsp-toy",
  "description": "LSP Toy Server",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lsptoy.showTreeOutline",
        "title": "LSP-Toy: Show Document Tree Outline",
        "category": "LSP-Toy"
      }
    ],
    "languages": [
      {
        "id": "lsptoy",
        "aliases": [
          "lsptoy",
          "lsptoy"
        ],
        "extensions": [
          "lsptoy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lsptoy",
        "scopeName": "source.lsptoy",
        "path": "./syntaxes/lsptoy.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "heading",
        "description": "Markdown-style headings",
        "superType": "keyword"
      },
      {
        "id": "bold",
        "description": "Bold text spans",
        "superType": "strong"
      },
      {
        "id": "italic",
        "description": "Italic text spans",
        "superType": "emphasis"
      },
      {
        "id": "link",
        "description": "Markdown links",
        "superType": "string"
      },
      {
        "id": "code",
        "description": "Inline code spans",
        "superType": "variable"
      },
      {
        "id": "todo",
        "description": "TODO annotations",
        "superType": "comment"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b",
    "clean": "rm -rf client/out server/out *.tsbuildinfo client/*.tsbuildinfo server/*.tsbuildinfo node_modules/.cache",
    "watch": "tsc -b -w",
    "test": "npm run test:all",
    "test:all": "node test/stdio.test.js && node test/i18n.test.js",
    "test:stdio": "node test/stdio.test.js",
    "test:completion": "node test/completion.test.js",
    "test:i18n": "node test/i18n.test.js",
    "test:bundled": "node scripts/test-bundled-server.js",
    "test:oob": "node scripts/test-out-of-box.js",
    "test:quiet": "LSP_TOY_DEBUG=false node test/stdio.test.js",
    "build:wasm": "node scripts/build-wasm.js",
    "fetch:wasm": "node scripts/fetch-wasm.js",
    "update:wasm": "node scripts/fetch-wasm.js latest",
    "build:bundled": "node scripts/build-bundled-servers.js",
    "bundle:all": "npm run compile && npm run build:bundled"
  },
  "dependencies": {
    "@vscode/tree-sitter-wasm": "^0.0.5-php.2",
    "i18next": "^25.5.3",
    "tree-sitter-wasms": "^0.1.12",
    "typescript": "^5.5.4",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/vscode": "^1.104.0",
    "esbuild": "^0.19.12",
    "tree-sitter-cli": "^0.25.10",
    "vscode-jsonrpc": "^8.2.1"
  }
}
